<div class="admin-index">
  <h1>Admin</h1>

  <h2>Categories ({{model.categories.length}})</h2>
  {{category-list categories=topLevelCategories showAddCategory=true}}

  <section class="test-addons-needing-categorization">
    <h2>Addons needing categorization ({{addonsNeedingCategorization.length}} / {{model.addons.length}})</h2>
    {{#if showAddonsNeedingCategorization}}
      {{addon-list addons=addonsNeedingCategorization}}
    {{else}}
      <a href="#" {{action "showNeedingCategories"}}>Show</a>
    {{/if}}
  </section>

  <section class="test-addons-needing-review">
    <h2>Addons needing review ({{addonsNeedingReview.length}} / {{model.addons.length}})</h2>
    {{#if showAddonsNeedingReview}}
      {{addon-list addons=addonsNeedingReview}}
    {{else}}
      <a href="#" {{action "showNeedingReview"}}>Show</a>
    {{/if}}
  </section>

  <section class="test-addons-with-new-updates">
    <h2>Addons with new updates since last review ({{addonsWithNewUpdates.length}} / {{model.addons.length}})</h2>
    {{#if showAddonsWithNewUpdates}}
      {{addon-list addons=addonsWithNewUpdates}}
    {{else}}
      <a href="#" {{action "showNewUpdates"}}>Show</a>
    {{/if}}
  </section>

  <h2>Hidden Addons</h2>
  {{#if showHiddenAddons}}
    {{addon-list addons=sortedHiddenAddons}}
  {{else}}
    <a href="#" {{action "showHidden"}}>Show</a>
  {{/if}}

  <section class="test-wip-addons">
    <h2>WIP addons ({{workInProgressAddons.length}} / {{model.addons.length}})</h2>
    {{#if showWIPAddons}}
      {{addon-list addons=workInProgressAddons}}
    {{else}}
      <a href="#" {{action "showWIPAddons"}}>Show</a>
    {{/if}}
  </section>
</div>
